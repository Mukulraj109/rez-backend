{
  "dashboard": {
    "id": "rez-merchant-backend",
    "title": "REZ Merchant Backend Monitoring",
    "tags": ["backend", "monitoring", "merchant"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "type": "graph",
        "title": "Response Time (Percentiles)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "legendFormat": "{{type}} - {{code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "errps",
            "label": "Errors/sec"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "type": "graph",
        "title": "Database Query Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - {{collection}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
        "type": "singlestat",
        "title": "Active Users",
        "targets": [
          {
            "expr": "active_users",
            "refId": "A"
          }
        ],
        "valueName": "current"
      },
      {
        "id": 6,
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Resident Memory",
            "refId": "A"
          },
          {
            "expr": "nodejs_heap_size_used_bytes",
            "legendFormat": "Heap Used",
            "refId": "B"
          },
          {
            "expr": "nodejs_heap_size_total_bytes",
            "legendFormat": "Heap Total",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total[5m])",
            "legendFormat": "User CPU",
            "refId": "A"
          },
          {
            "expr": "rate(process_cpu_system_seconds_total[5m])",
            "legendFormat": "System CPU",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "type": "table",
        "title": "Recent Errors",
        "targets": [
          {
            "expr": "topk(10, errors_total)",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
