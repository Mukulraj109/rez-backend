# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rez-app
MONGODB_TEST_URI=mongodb://localhost:27017/rez-app-test

# JWT Configuration
# User Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Merchant Authentication (separate secret for merchant security)
JWT_MERCHANT_SECRET=your-merchant-secret-here-change-in-production
JWT_MERCHANT_EXPIRES_IN=7d

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:19006

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Twilio SMS Configuration (Sign up at twilio.com)
# Used for SMS notifications: order updates, OTP, low stock alerts, etc.
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,webm

# External Services
# SMS Service (for OTP)
SMS_SERVICE_URL=
SMS_API_KEY=
SMS_SENDER_ID=REZAPP

# Email Service (SMTP - Legacy for OTP)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@rezapp.com

# SendGrid Email Configuration (For merchant communications)
# Sign up at https://sendgrid.com/ to get your API key
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourstore.com
SENDGRID_FROM_NAME=Your Store

# Payment Gateway - Razorpay
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here
# Razorpay Account Number (for cashback payouts) - Sign up at razorpay.com and get from Dashboard
RAZORPAY_ACCOUNT_NUMBER=your_razorpay_account_number_here

# Payment Gateway - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Cloud Storage (AWS S3/Cloudinary)
CLOUD_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=rez-app-uploads

CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google Cloud Vision (for OCR - Bill text extraction)
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key_here

# Push Notifications
FCM_SERVER_KEY=
PUSH_NOTIFICATION_ICON=

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_SECRET=your-redis-session-secret

# Social Login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Analytics & Monitoring
ANALYTICS_ENABLED=false
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# New Relic APM
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=REZ Merchant Backend
NEW_RELIC_LOG_LEVEL=info

# Prometheus Metrics
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Settings
DEBUG_MODE=true
SEED_DATABASE=false
AUTO_CREATE_INDEXES=true

# API Versioning
API_VERSION=v1
API_PREFIX=/api